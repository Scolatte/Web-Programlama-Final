@model IQueryable<News>
@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_AdminLayout";
}

<component type="typeof(WebProgramlamaFinal2023.Blazor.Component)" render-mode="Server" />

<a asp-controller="Home" asp-action="AddNew" class="btn btn-danger">Yeni Haber</a>

<table class="table tab-bordered" border="1" cellpadding="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach (News n in Model)
    {
        <tbody>
            <tr>
                <th>@n.ID</th>
                <td>@n.Title</td>
                <td>@n.Content</td>
                <td>@n.PublishDate</td>

                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@n.ID" class="btn btn-danger">Sil</a></td>
                <td><a asp-controller="Home" asp-action="UpdateNew" asp-route-id="@n.ID" class="btn btn-info">Güncelle</a></td>
            </tr>
        </tbody>
    }
</table>

