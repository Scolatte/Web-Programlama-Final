@model WebProgramlamaFinal2023.Controllers.NewsPacket
@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<!-- Top News Start-->
<div class="top-news">
    <div class="container-fluid">
        <div class="row">
            @await Html.PartialAsync("~/Views/Components/OneNew.cshtml", Model.PopNew)
            
            <div class="col-md-6 tn-right">
                <div class="row">

                    @for (int i = 0; i < 1; i++)
                    {
                        foreach (News n in Model.News)
                        {
                            if (n == Model.PopNew) continue;

                            @await Html.PartialAsync("~/Views/Components/OneNew.cshtml", n)
                            i++;

                            if (i == 4) break;
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Top News End-->
